<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

	<FrameLayout
	        android:id="@+id/score_background"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutS_left" >

            <Button
                android:id="@+id/button_left_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000" />

            <com.example.bv.CustomNumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:focusable="false" />

            <Button
                android:id="@+id/button_left_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000" />

        </LinearLayout>



        <Button
            android:id="@+id/button_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutS_right" >
            
            <Button
                android:id="@+id/button_right_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000" />

            <com.example.bv.CustomNumberPicker
                android:id="@+id/numberPicker2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:focusable="false" />

            <Button
                android:id="@+id/button_right_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000" />

        </LinearLayout>
	
	    
	</FrameLayout>
</FrameLayout>
